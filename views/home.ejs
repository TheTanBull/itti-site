<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Passion+One&display=swap" rel="stylesheet">

  <style type="text/css" media="screen">    
    body {
      margin: 0;
      padding: 0;
      background-color: #F9F9F9;
      text-decoration-color: white;
      font-size: 16px;
    }

    :root {
      --background: linear-gradient(150deg, #ff8b61 15%, #ff6166 70%, #ffa8ce 94%);
      --first: #ff8b61;
      --second: #ff8461;
      --third: #FF7663;
      --fourth: #ff7c8d;
      --fifth: #ff7164;
    }

    #banner {
      position: absolute;
      top: 0;
      left: 0;
      overflow: hidden;
      width: 100%;
      height: 99vh;
      min-height: 420px;
      min-width: 400px;
      background: var(--background);
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: repeat(4, 1fr);
      transform: skewY(-12deg);
      transform-origin: 0;
      z-index: -1;
    }

    #banner span:nth-child(1) {
      grid-column: span 1;
      background: var(--first);
    }

    #banner span:nth-child(2) {
      grid-column: span 2;
      background: var(--second);
    }

    #banner span:nth-child(3) {
      grid-column: span 2;
      background: var(--third);
    }

    #banner span:nth-child(4) {
      grid-column: 6;
      grid-row: 3;
      background: var(--fourth);
    }

    #banner span:nth-child(5) {
      grid-column: span 2;
      grid-row: 4;
      background: var(--fifth);
    }

    #headline {
      color: #FFF;
      font-family: 'Passion One', cursive;
      font-size: 4rem;
      margin-top: 0;
      padding-left: 5%;
    }

    #minifiedUrlDisplay {
      color: #FFF;
    }

    .btn {
      width: 50%;
    }

    .form {
      max-width: 720px;
      min-width: 300px;
    }

    .form__container {
      margin-top: 10rem;
    }

    .form__submit_button {
      margin-top: 4rem;
    }

    @keyframes spinner {
      0% {
        transform: translate3d(-50%, -50%, 0) rotate(0deg);
      }
      100% {
        transform: translate3d(-50%, -50%, 0) rotate(360deg);
      }
    }

    .spinner {
      display: none;
      height: 10vh;  
      opacity: 1;
      position: relative;
      transition: opacity linear 0.1s;
    }

    .spinner::before {
      animation: 2s linear infinite spinner;
      border: solid 3px #eee;
      border-bottom-color: #EF6565;
      border-radius: 50%;
      content: "";
      height: 40px;
      left: 50%;
      opacity: inherit;
      position: absolute;
      top: 50%;
      transform: translate3d(-50%, -50%, 0);
      transform-origin: center;
      width: 40px;
      will-change: transform;
    }
    

  </style>

  <title>ittie</title>

</head>

<body>
  <div id="banner">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
    <span></span>
  </div>

  <h1 id="headline">
    itti
  </h1>

  <div class="container-fluid form__container">
    <div class="row">
      <div class="col">
      </div>
      <div class="col-10 col-xs-10 col-md-8 form">
        <form action="/api/urls" class="form" method="post">
          <div class="form-group">
            <div id="minifiedUrlDisplay"></div>
            <div class="row justify-content-center mt-5"> 
              <input
                class="form-control"
                id="urlInput"
                name="link"
                placeholder='Enter URL'
                type="url"
                value=""
              >
              <button
                class="btn btn-dark btn-lg form__submit_button"
                id="submitButton"
              >
                Minify
              </button>
            </div>
            <div
              aria-live="assertive"
              class="spinner"
              id="spinner"
              role="alert"
            >
            </div>
          </div>
        </form>
      </div>
      <div class="col">
      </div>
    </div>
  </div>

  <script>
    const minifiedUrlDisplay = document.getElementById('minifiedUrlDisplay');
    const spinner = document.getElementById('spinner');
    const submitButton = document.getElementById('submitButton');
    const urlInput = document.getElementById('urlInput');

    submitButton.addEventListener('click', (event) => {
      event.preventDefault();
      if (urlInput.value) {

        const hostUrl = '<%= host %>' + 'api/urls';

        spinner.style.display = 'block';
        submitButton.disabled = true;
        urlInput.style.borderColor = '#ced4da';
        
        minifyUrl(hostUrl, { link: urlInput.value })
          .then(response => {
            console.log(response);
            spinner.style.display = 'none';
            submitButton.disabled = false;

            if (response.success) {
              minifiedUrlDisplay.innerHTML = `<h2>${response.url}</h2>`;
            }
          })
          .catch(error => {
            console.log('failed', error);
          });
      } else {
        urlInput.style.borderColor = 'red';
      }
    })

    async function minifyUrl(url, data) {
      const response = await fetch(url, {
        method: 'POST',
        mode: 'cors',
        cache: 'no-cache',
        credentials: 'same-origin',
        headers: {
          'Content-Type': 'application/json'
        },
        redirect: 'follow',
        referrerPolicy: 'no-referrer',
        body: JSON.stringify(data)
      });
      return response.json();
    }

  </script>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>